# MyID Credentials
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here
MYID_HOST=https://api.myid.uz

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# MongoDB Atlas uchun: mongodb+srv://username:password@cluster.mongodb.net/greenmarket
# Lokal uchun: mongodb://localhost:27017/greenmarket
MONGODB_URI=mongodb://localhost:27017/greenmarket

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Encryption Key (AES-256)
# 64 ta hex belgi (32 byte) bo'lishi kerak
# Yangi kalit yaratish uchun: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here
